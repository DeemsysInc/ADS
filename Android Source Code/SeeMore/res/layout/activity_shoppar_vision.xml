<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRlLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >
      <include
            android:id="@+id/include1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            layout="@layout/layout_header" />
       <include
        android:id="@+id/include2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        layout="@layout/layout_footer_menu" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/include1"
        android:layout_marginTop="80dp"
        >
        <Spinner
            android:id="@+id/chooseTypeSpinner"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:entries="@array/spinnerShopparTypeItems" />

    <com.seemoreinteractive.seemoreinteractive.helper.PressedBgImageView
        android:id="@+id/imgSearch"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtChooseColor"       
        android:layout_marginTop="26dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_search_icon" />

    <TextView
        android:id="@+id/txtChooseColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtChooseType"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="12dp"
        android:text="Choose Color"
        android:textColor="#000000" 
        android:textSize="30sp"/>

        <TextView
        android:id="@+id/txtColorCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgSearch"
        android:layout_below="@+id/txtChooseColor"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="#000000" 
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txtChooseType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"
        android:text="Choose Type"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtColor"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/chooseTypeSpinner"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="#000000" />

</RelativeLayout>
       <!--   <ImageView
        android:id="@+id/imgvProdInfoBigImg"
		android:layout_width="match_parent"  
		android:layout_height="wrap_content"
		android:scaleType="fitXY" 
		android:layout_below="@+id/layout" 
		android:src="@drawable/adore_marker">
    </ImageView> -->
    
     <RelativeLayout
        android:id="@+id/relativeImgLayout"
		android:layout_width="match_parent"  
		android:layout_height="480dp"
		android:layout_below="@+id/layout" 
		>

      <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@xml/custom_border"
        android:indeterminateDrawable="@xml/my_progress_indeterminate"      
        android:visibility="visible" />
         
    </RelativeLayout> 

    
       
</RelativeLayout>