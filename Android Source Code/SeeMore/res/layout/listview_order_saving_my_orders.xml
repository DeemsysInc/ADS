<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRlForMySavedOrder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <com.seemoreinteractive.seemoreinteractive.helper.PressedBgImageView
        android:id="@+id/imgvCloseForMSO"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/exp_remove_icon" />

    <com.seemoreinteractive.seemoreinteractive.helper.PressedBgImageView
        android:id="@+id/imgvRightForMSO"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/imgvCloseForMSO"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_right" />

    <TextView
        android:id="@+id/txtOrderIdTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Order No: "
        android:textColor="@color/BlackColor"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/txtvOrderIdVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtOrderIdTitle"
        android:text="140"
        android:textColor="@color/BlackColor"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/txtvOrderTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/imgvRightForMSO"
        android:maxLength="12"
        android:text="$2902.99"
        android:textColor="@color/BlackColor"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/txtOrderTotalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/txtvOrderTotalPrice"
        android:text="Total: "
        android:textColor="@color/BlackColor"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/txtOrderDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtOrderIdTitle"
        android:text="Order Date: "
        android:textColor="@color/BlackColor"
        android:textSize="20sp"  />

    <TextView
        android:id="@+id/txtvOrderDateVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtOrderDateTitle"
        android:layout_alignBottom="@+id/txtOrderDateTitle"
        android:layout_toRightOf="@+id/txtOrderDateTitle"
        android:text="2014-09-26 21:00:00"
        android:textColor="@color/BlackColor"
        android:textSize="20sp"  />

</RelativeLayout>