<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
      android:id="@+id/bgRelativeLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#7a7872"
      android:orientation="vertical"
      android:scrollbars="vertical">

      <include
          android:id="@+id/include1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          layout="@layout/layout_header" />
      
      <include
          android:id="@+id/include2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_alignParentLeft="true"
          layout="@layout/layout_footer_menu" />

      
       <TextView
           android:id="@+id/txtNoOfferMsg"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:gravity="center_vertical|center_horizontal"
           android:text="@string/no_offers_msg"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="#000000"
           android:textSize="35sp"
           android:visibility="visible" />

		<com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
		    android:id="@+id/btnBrand"
		    android:layout_width="111dp"
		    android:layout_height="40dp"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/include1"
		    android:layout_marginLeft="8.5dp"
		    android:layout_marginTop="10dp"
		    android:background="@drawable/offer_tab_left"
		    android:text="@string/brand"
		    android:textColor="#000000"
		    android:textSize="16sp" />

        <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
            android:id="@+id/btnExpiration"
            android:layout_width="111dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/btnBrand"
            android:layout_alignBottom="@+id/btnBrand"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/btnBrand"
            android:background="@drawable/offer_tab_center"
            android:text="@string/expiration"
            android:textColor="#000000"
            android:textSize="16sp" />

        <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
            android:id="@+id/btnValue"
            android:layout_width="111dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_alignBaseline="@+id/btnExpiration"
            android:layout_alignBottom="@+id/btnExpiration"
            android:layout_toRightOf="@+id/btnExpiration"
            android:background="@drawable/offer_tab_center"
            android:text="@string/value"
            android:textColor="#000000"
            android:textSize="16sp" />

       <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
           android:id="@+id/btnMostRecent"
           android:layout_width="111dp"
           android:layout_height="40dp"
           android:layout_marginLeft="7dp"
           android:layout_alignBaseline="@+id/btnValue"
           android:layout_alignBottom="@+id/btnValue"
           android:layout_toRightOf="@+id/btnValue"
           android:background="@drawable/offer_tab_center_enable"
           android:text="@string/most_recent"
           android:textColor="#ffffff"
           android:textSize="16sp" />
       
       <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
           android:id="@+id/btnCloset"
           android:layout_width="111dp"
           android:layout_height="40dp"
           android:layout_marginLeft="7dp"
           android:layout_alignBaseline="@+id/btnMostRecent"
           android:layout_alignBottom="@+id/btnMostRecent"
           android:layout_toRightOf="@+id/btnMostRecent"
           android:background="@drawable/offer_tab_right"
           android:text="@string/closet"
           android:textColor="#000000"
           android:textSize="16sp" />
       
	  <ViewFlipper
	      android:id="@+id/viewFlipper1"
	      android:layout_width="match_parent"
	      android:layout_height="match_parent"
	      android:layout_above="@+id/include2"
	      android:layout_alignParentLeft="true"
	      android:layout_marginTop="10dp"
          android:background="#FFFFFF"
	      android:layout_below="@+id/btnBrand" >

	      <RelativeLayout
	          android:id="@+id/rlForGridViewPage"
	          android:layout_width="match_parent"
	          android:layout_height="match_parent" >

		      <com.seemoreinteractive.seemoreinteractive.helper.BounceGridView
		          android:id="@+id/myOffersGridView1"
		          android:layout_width="match_parent"
		          android:layout_height="match_parent"
	              android:gravity="center_horizontal"
	              android:horizontalSpacing="10dp"
	              android:numColumns="2"
	              android:scrollbars="vertical"
	              android:stretchMode="columnWidth"
	              android:paddingLeft="10dp"
	              android:paddingRight="10dp"
	              android:verticalSpacing="10dp" >
		      </com.seemoreinteractive.seemoreinteractive.helper.BounceGridView>
	      </RelativeLayout>

	      <RelativeLayout
	          android:id="@+id/rlForRedeemOfferPage"
	          android:layout_width="match_parent"
	          android:layout_height="match_parent" >              

	          <RelativeLayout
	              android:id="@+id/rlForOfferImage"
	              android:layout_marginTop="20dp"	              
	              android:layout_width="match_parent"
	              android:layout_height="wrap_content" >	   
	                         
		           <ImageView
		               android:id="@+id/imgvOfferImage"
		               android:layout_width="match_parent"
		               android:layout_height="350dp"
		               android:layout_centerHorizontal="true"
		               android:layout_centerVertical="true"
		               android:scaleType="fitCenter" />	           
	          </RelativeLayout>

				<RelativeLayout
				    android:id="@+id/rlForViewLine"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_alignParentBottom="true"
				    android:layout_centerHorizontal="true"
				    android:layout_alignParentLeft="true"
				    android:layout_marginLeft="20dp"
				    android:layout_marginBottom="10dp" >

				    <View
				        android:id="@+id/viewLine"
				        android:layout_width="550dp"
				        android:layout_height="1dp"
				        android:background="@android:color/black" />

				    <ImageView
				        android:id="@+id/imgvOfferExpTimerIcon"
				        android:layout_width="17dp"
				        android:layout_height="16dp"
				        android:layout_alignParentLeft="true"
				        android:layout_centerVertical="true"
				        android:layout_marginLeft="25dp"
				        android:layout_marginTop="10dp"
				        android:scaleType="fitXY"
				        android:src="@drawable/offer_exp_timer_icon" />

				    <TextView
				        android:id="@+id/txtvOfferExpTimerIcon"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_alignParentTop="true"
				        android:layout_marginLeft="10dp"
				        android:layout_marginTop="5dp"
				        android:layout_toRightOf="@+id/imgvOfferExpTimerIcon"
				        android:text="@string/expire_date"
				        android:textColor="#000000"
				        android:textSize="20sp" />
				</RelativeLayout>

				<TextView
				    android:id="@+id/txtvRedeemOfferName"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_below="@+id/rlForOfferImage"
				    android:layout_marginTop="30dp"
				    android:layout_marginLeft="20dp"
				    android:maxLength="35"
				    android:text="@string/redeem_string"
				    android:textAppearance="?android:attr/textAppearanceLarge"
				    android:textColor="#000000"
				    android:textSize="36sp"
				    android:textStyle="bold" />

				<TextView
				    android:id="@+id/txtvRedeemOfferDesc1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignLeft="@+id/txtvRedeemOfferName"
				    android:layout_below="@+id/txtvRedeemOfferName"
				    android:layout_marginTop="10dp"
				    android:maxLength="50"
				    android:text="@string/redeem_string1"
				    android:textAppearance="?android:attr/textAppearanceLarge"
				    android:textColor="#000000"
				    android:textSize="20sp" />

				<com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
				    android:id="@+id/imgvRedeemOfferImage"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_above="@+id/rlForViewLine"
				    android:layout_centerHorizontal="true"
				    android:layout_marginBottom="20dp"
				    android:background="@drawable/offer_redeem_button"
				    android:scaleType="fitCenter"
				    android:textColor="#ffffff"
				    android:textSize="20sp"
				    android:textStyle="bold" />

			</RelativeLayout>
          
			<RelativeLayout
			    android:id="@+id/rlForMarkAsRedeemPage"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent" >

		       <RelativeLayout
	              android:id="@+id/rlForBackOfferImage"
	              android:layout_marginTop="20dp"	              
	              android:layout_width="match_parent"
	              android:layout_height="wrap_content" >	   
	                         
		           <ImageView
		               android:id="@+id/imgvBackOfferImage"
		               android:layout_width="match_parent"
		               android:layout_height="350dp"
		               android:layout_centerHorizontal="true"
		               android:layout_centerVertical="true"
		               android:scaleType="fitCenter" />	           
	          </RelativeLayout>

				<RelativeLayout
				    android:id="@+id/rlForBackViewLine"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_alignParentBottom="true"
				    android:layout_centerHorizontal="true"
				    android:layout_alignParentLeft="true"
				    android:layout_marginLeft="20dp"
				    android:layout_marginBottom="10dp" >

				    <View
				        android:id="@+id/viewBackLine"
				        android:layout_width="550dp"
				        android:layout_height="1dp"
				        android:background="@android:color/black" />

				    <ImageView
				        android:id="@+id/imgvBackOfferExpTimerIcon"
				        android:layout_width="17dp"
				        android:layout_height="16dp"
				        android:layout_alignParentLeft="true"
				        android:layout_centerVertical="true"
				        android:layout_marginLeft="25dp"
				        android:layout_marginTop="10dp"
				        android:scaleType="fitXY"
				        android:src="@drawable/offer_exp_timer_icon" />

				    <TextView
				        android:id="@+id/txtvBackOfferExpTimerIcon"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_alignParentTop="true"
				        android:layout_marginLeft="10dp"
				        android:layout_marginTop="5dp"
				        android:layout_toRightOf="@+id/imgvBackOfferExpTimerIcon"
				        android:text="@string/expire_date"
				        android:textColor="#000000"
				        android:textSize="20sp" />
				</RelativeLayout>

				<TextView
				    android:id="@+id/txtvBackRedeemOfferName"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_below="@+id/rlForBackOfferImage"
				    android:layout_marginTop="30dp"
				    android:layout_marginLeft="20dp"
				    android:maxLength="35"
				    android:text="@string/redeem_string"
				    android:textAppearance="?android:attr/textAppearanceLarge"
				    android:textColor="#000000"
				    android:textSize="36sp"
				    android:textStyle="bold" />

				<TextView
				    android:id="@+id/txtvBackRedeemOfferDesc1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignLeft="@+id/txtvBackRedeemOfferName"
				    android:layout_below="@+id/txtvBackRedeemOfferName"
				    android:layout_marginTop="10dp"
				    android:maxLength="50"
				    android:text="@string/redeem_string1"
				    android:textAppearance="?android:attr/textAppearanceLarge"
				    android:textColor="#000000"
				    android:textSize="20sp" />

				<com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
				    android:id="@+id/imgvBackRedeemOfferImage"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_above="@+id/rlForBackViewLine"
				    android:layout_centerHorizontal="true"
				    android:layout_marginBottom="20dp"
				    android:background="@drawable/offer_redeem_button"
				    android:scaleType="fitCenter"
				    android:textColor="#ffffff"
				    android:textSize="20sp"
				    android:textStyle="bold" />

			</RelativeLayout>
          
    </ViewFlipper>

	  <include
	      android:id="@+id/include_layout"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_alignParentLeft="true"
	      android:layout_alignParentTop="true"
	      layout="@layout/instruction_layout" />
	    
  </RelativeLayout>
