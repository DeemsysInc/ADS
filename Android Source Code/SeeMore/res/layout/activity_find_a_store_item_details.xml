<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seemoreinteractive.seemoreinteractive.FindAStoreItemDetails"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WhiteColor" >

        <include
            android:id="@+id/include1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            layout="@layout/layout_header" />

        <TabHost
            android:id="@+id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/include1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >
                </TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RelativeLayout
                        android:id="@+id/tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" >

                        <TextView
                            android:id="@+id/txtLblAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="61dp"
                            android:text="Address: "
                            android:textColor="@color/BlackColor"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txtLblRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/txtLblAddress"
                            android:layout_below="@+id/txtLblAddress"
                            android:layout_marginTop="90dp"
                            android:isIndicator="true"
                            android:text="Rating: "
                            android:textColor="@color/BlackColor"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txtLblPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/txtLblAddress"
                            android:layout_below="@+id/txtLblRating"
                            android:layout_marginTop="41dp"
                            android:text="Phone: "
                            android:textColor="@color/BlackColor"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txtLblDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/txtLblAddress"
                            android:layout_below="@+id/txtLblPhone"
                            android:layout_marginTop="41dp"
                            android:text="Distance: "
                            android:textColor="@color/BlackColor"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txtLblWebsite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/txtLblAddress"
                            android:layout_below="@+id/txtLblDistance"
                            android:layout_marginTop="41dp"
                            android:text="Website: "
                            android:textColor="@color/BlackColor"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txtAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/ratingBar1"
                            android:layout_alignParentTop="true"
                            android:layout_alignRight="@+id/callbtn"
                            android:layout_marginLeft="90dp"
                            android:layout_toRightOf="@+id/txtLblDistance"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/BlackColor"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txtDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/txtLblDistance"
                            android:layout_alignBottom="@+id/txtLblDistance"
                            android:layout_alignLeft="@+id/txtPhone"
                            android:text=""
                            android:textColor="@color/BlackColor"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txtPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/txtLblDistance"
                            android:layout_alignLeft="@+id/txtAddress"
                            android:text=""
                            android:textColor="@color/BlackColor"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/txtWebsite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/txtLblWebsite"
                            android:layout_alignBottom="@+id/txtLblWebsite"
                            android:layout_alignLeft="@+id/txtDistance"
                            android:text=""
                            android:textColor="@color/BlackColor"
                            android:textSize="25sp" />

                        <ImageView
                            android:id="@+id/callbtn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignBottom="@+id/txtPhone"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="42dp"
                            android:src="@drawable/callbtn_copy"
                            android:visibility="invisible" />

                        <RatingBar
                            android:id="@+id/ratingBar1"
							style="?android:attr/ratingBarStyleIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/txtLblRating"
                            android:layout_alignLeft="@+id/txtPhone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/tab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <fragment
                            android:id="@+id/map"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            class="com.google.android.gms.maps.MapFragment" />
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </RelativeLayout>

</FrameLayout>