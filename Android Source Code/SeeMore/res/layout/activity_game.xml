<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal">

   

  <!--   <ImageView
        android:id="@+id/imgvBackToOffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/include1"
        android:layout_marginTop="18dp"
        android:src="@drawable/btn_back_to_offer"
        android:visibility="invisible" /> -->

    <RelativeLayout
        android:id="@+id/bgRelativeLayout"
        android:layout_width="525dp"
        android:layout_height="480dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp"
        android:background="@color/WhiteColor"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rlForImgs"
            android:layout_width="480dp"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@xml/custom_border"
                android:indeterminateDrawable="@xml/my_progress_indeterminate"
                android:visibility="visible" />

            <com.seemoreinteractive.seemoreinteractive.helper.PressedBgImageView
                android:id="@+id/imgvGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/seemore_wod_instruction"/>
        </RelativeLayout>

        <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
            android:id="@+id/btnPlayNow"
            android:layout_width="275dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_playnow"
            android:visibility="invisible" 
            android:layout_marginBottom="25dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgvClose"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="60dp"
        android:src="@drawable/playnow_close_btn"
       />

</RelativeLayout>

