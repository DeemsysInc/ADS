<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <include
        android:id="@+id/include1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        layout="@layout/layout_header" />

    <com.seemoreinteractive.seemoreinteractive.helper.BounceScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include1"
        android:fillViewport="true" >

        <RelativeLayout
            android:id="@+id/loginFormRelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="top"
            android:orientation="vertical"
            android:scrollbars="vertical" >

            <TextView
                android:id="@+id/lblAccInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="45dp"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/etxtEmailId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblAccInfo"
                android:layout_margin="10dp"
                android:background="@xml/rounded_edittext"
                android:ems="10"
                android:hint="Username/Registered Email"
                android:inputType="textPersonName"
                android:padding="25dip" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/etxtPwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etxtEmailId"
                android:layout_margin="10dp"
                android:background="@xml/rounded_edittext"
                android:ems="10"
                android:hint="Password "
                android:inputType="textPassword"
                android:padding="25dip" />

            <TextView
                android:id="@+id/errorMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etxtPwd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="#D00000"
                android:textSize="20sp" />

            <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
                android:id="@+id/btnLogin"
                android:layout_width="300dp"
                android:layout_height="64dp"
                android:layout_below="@+id/errorMsg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_seemore_login"
                android:scaleType="fitXY" />

            <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
                android:id="@+id/btnForgotPwd"
                android:layout_width="300dp"
                android:layout_height="64dp"
                android:layout_below="@+id/btnLogin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@xml/rounded_edittext"
                android:scaleType="fitXY"
                android:text="Forgot your password?" />

            <ProgressBar
                android:id="@+id/registerProgressBar"
                android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_centerVertical="true"
		        android:background="@xml/custom_border"
		        android:indeterminateDrawable="@xml/my_progress_indeterminate" 
                android:visibility="invisible" />
        </RelativeLayout>
    </com.seemoreinteractive.seemoreinteractive.helper.BounceScrollView>

</RelativeLayout>