<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bgRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteColor"
    android:orientation="vertical" >

     <include
        android:id="@+id/include1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        layout="@layout/layout_header" />
     <include
        android:id="@+id/include2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        layout="@layout/layout_footer_menu" />
    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"         
        android:layout_below="@+id/include1"
        >
 <RelativeLayout
        android:id="@+id/relativeLayoutSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       
      >
    <TextView
        android:id="@+id/etxtLabel"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Did you find what you are looking for ?"
        android:textSize="25sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txtNoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etxtLabel"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:text="No ?"
        android:textSize="30sp"
        android:textColor="#000000"
         />

     <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
        android:id="@+id/btnSearch"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_below="@+id/etxtLabel"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:text="Search by zip code"
        android:textSize="25dp" 
        android:background="@drawable/gray_gradient"
        android:textColor="#ffffff"/>
    
</RelativeLayout>

  <RelativeLayout
     android:id="@+id/relativeLayoutZip"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_alignParentLeft="true"
     android:layout_alignParentTop="true"
     android:visibility="invisible">

     <TextView
         android:id="@+id/textlbl"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/etxtZip"
         android:layout_marginLeft="15dp"
         android:scaleType="fitCenter"
         android:text="Still not found? Please call us"
         android:textSize="20sp" 
         android:textColor="#000000"/>

     <EditText
         android:id="@+id/etxtZip"
         android:layout_width="260dp"
         android:layout_height="60dp"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="50dp"
         android:layout_marginTop="10dp"
         android:ems="10"
         android:gravity="center_vertical"
         android:hint="Enter zip code"
         android:textSize="25sp" >

        
     </EditText>

     <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
         android:id="@+id/btnGetList"
         android:layout_width="200dp"
         android:layout_height="60dp"
         android:layout_above="@+id/textlbl"
         android:layout_marginLeft="51dp"
         android:layout_toRightOf="@+id/etxtZip"
         android:background="@drawable/gray_gradient"
         android:scaleType="fitCenter"
         android:text="Get List"
         android:textSize="25dp" 
         android:textColor="#ffffff"/>

 </RelativeLayout> 

</RelativeLayout>

    <View
             android:id="@+id/hrView"
             android:layout_width="fill_parent"
             android:layout_height="2dp"
             android:background="#c0c0c0"
             android:layout_below="@+id/mainRelativeLayout"
             android:layout_marginTop="10dp" />
	<ListView
	    android:id="@+id/lvForStores"
	    android:layout_width="match_parent"
	    android:layout_height="660dp"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/hrView"
	    android:layout_marginTop="10dp"
	    android:divider="#c0c0c0"
        android:dividerHeight="2px" >
	</ListView>
  <TextView
         android:id="@+id/resultText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
	     android:layout_below="@+id/mainRelativeLayout"
         android:layout_marginLeft="15dp"
         android:scaleType="fitCenter"
         android:text="No results found"
         android:textSize="20sp" 
         android:textColor="#000000"
         android:visibility="invisible"/>
	

	<!-- <include
	    android:id="@+id/include_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    layout="@layout/instruction_layout" /> -->

</RelativeLayout>