<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OrderConfirmation" >

    <RelativeLayout
        android:id="@+id/listviewRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <View
            android:id="@+id/separatorTop"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_above="@+id/rlForListView"
            android:background="#000000" />

        <RelativeLayout
            android:id="@+id/rlForListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/txtvExpProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:maxLength="30"
                android:text="       -      "
                android:textColor="@color/BlackColor"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/imgvExpProdImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txtvExpProductName"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/pd_blank_img" />

            <Button
                android:id="@+id/btnExpColorCode"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/imgvExpProdImage"
                android:layout_toRightOf="@+id/imgvExpProdImage" />

            <TextView
                android:id="@+id/txtvExpSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnExpColorCode"
                android:layout_toRightOf="@+id/imgvExpProdImage"
                android:text=" - "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/BlackColor"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imgvRemoveIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imgvEditIcon"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/exp_remove_icon" />

            <ImageView
                android:id="@+id/imgvEditIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/txtvExpProdTotalPrice"
                android:layout_toLeftOf="@+id/imgvRemoveIcon"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/content_edit" />

            <TextView
                android:id="@+id/txtvExpProdTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtvExpProductName"
                android:layout_centerHorizontal="true"
                android:text="$0.00"
                android:textColor="@color/BlackColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtvExpProdQuantityWithPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtvExpProdTotalPrice"
                android:layout_centerHorizontal="true"
                android:text="(0 X $0.00)"
                android:textColor="@color/BlackColor"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/rlForListView"
            android:background="#000000" />
    </RelativeLayout>

</RelativeLayout>