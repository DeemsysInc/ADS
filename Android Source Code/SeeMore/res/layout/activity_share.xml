<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
	    android:id="@+id/bgRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_closet" >

        <include
            android:id="@+id/include1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            layout="@layout/layout_header" />

		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_below="@+id/include1" >

			<TextView
			    android:id="@+id/txtvProductName"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentTop="true"
			    android:layout_centerHorizontal="true"
			    android:layout_marginTop="24dp"
			    android:gravity="center"
			    android:maxLength="25"
			    android:textAppearance="?android:attr/textAppearanceLarge"
			    android:textSize="35sp"
			    android:textStyle="bold" />

			<LinearLayout
			    android:id="@+id/bigImageWithName"
			    android:layout_width="478dp"
			    android:layout_height="495dp"
			    android:layout_centerHorizontal="true"
			    android:layout_below="@+id/txtvProductName"
			    android:layout_marginTop="10dp"
			    android:background="@color/WhiteColor"
			    android:gravity="center_vertical|center_horizontal" >
			    <ImageView
			        android:id="@+id/imgvProdInfoBigImg"
			        android:layout_width="430dp"
			        android:layout_height="450dp"
			        android:layout_gravity="center_vertical|center_horizontal"
			        android:scaleType="fitCenter" />
			</LinearLayout>

			<TextView
			    android:id="@+id/txtvProductPrice"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignLeft="@+id/bigImageWithName"
			    android:layout_alignRight="@+id/bigImageWithName"
			    android:layout_below="@+id/bigImageWithName"
			    android:gravity="center_horizontal"
			    android:maxLength="8"
			    android:textAppearance="?android:attr/textAppearanceLarge"
			    android:textSize="35sp"
			    android:textStyle="bold" />

			<TextView
			    android:id="@+id/txtProductDesc"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_above="@+id/facebook"
			    android:layout_alignLeft="@+id/bigImageWithName"
			    android:layout_alignRight="@+id/txtvProductPrice"
			    android:layout_below="@+id/txtvProductPrice"
			    android:scrollbars="vertical"
			    android:textAppearance="?android:attr/textAppearanceLarge" />
			
			  <include
	            android:id="@+id/include_layout"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignTop="@+id/txtvProductName"
	            layout="@layout/instruction_layout" />

			<com.seemoreinteractive.seemoreinteractive.helper.PressedBgImageView
			    android:id="@+id/facebook"
			    android:layout_width="120dp"
			    android:layout_height="120dp"
			    android:layout_marginLeft="24dp"
			    android:layout_marginBottom="10dp"
			    android:layout_alignParentBottom="true"
			    android:background="@drawable/facebook_button" />

			<com.seemoreinteractive.seemoreinteractive.helper.PressedBgImageView
			    android:id="@+id/twitter"
			    android:layout_width="120dp"
			    android:layout_height="120dp"
			    android:layout_alignTop="@+id/facebook"
			    android:layout_marginLeft="24dp"
			    android:layout_toRightOf="@+id/facebook"
			    android:background="@drawable/twitter_button" />

			<com.seemoreinteractive.seemoreinteractive.helper.PressedBgImageView
			    android:id="@+id/email"
			    android:layout_width="120dp"
			    android:layout_height="120dp"
			    android:layout_alignTop="@+id/twitter"
			    android:layout_marginLeft="24dp"
			    android:layout_toRightOf="@+id/twitter"
			    android:background="@drawable/email_button" />

			<com.seemoreinteractive.seemoreinteractive.helper.PressedBgImageView
			    android:id="@+id/im"
			    android:layout_width="120dp"
			    android:layout_height="120dp"
			    android:layout_alignTop="@+id/email"
			    android:layout_marginLeft="24dp"
			    android:layout_toRightOf="@+id/email"
			    android:background="@drawable/im_button" />

			<com.seemoreinteractive.seemoreinteractive.helper.PressedBgImageView
			    android:id="@+id/imgvHelp"
			    android:layout_width="50dp"
			    android:layout_height="50dp"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:background="@drawable/help_icon" />

		</RelativeLayout>
			
        <TextView
            android:id="@+id/txtvProdNotAvail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="There are no products available."
            android:textSize="30sp"
            android:visibility="invisible"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>
	
</ScrollView>