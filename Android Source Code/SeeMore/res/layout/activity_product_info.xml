<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:id="@+id/bgRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_closet"
        android:orientation="vertical" >

        <include
            android:id="@+id/include1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            layout="@layout/layout_header" />

        <include
            android:id="@+id/include2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            layout="@layout/layout_footer_menu" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/include1" >

            <TextView
                android:id="@+id/txtvProductName"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentTop="true"
			    android:layout_centerHorizontal="true"
			    android:layout_marginTop="24dp"
			    android:gravity="center"
			    android:maxLength="25"
			    android:textAppearance="?android:attr/textAppearanceLarge"
			    android:textSize="35sp"
			    android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/bigImageWithName"
                android:layout_width="478dp"
                android:layout_height="495dp"
                android:layout_below="@+id/txtvProductName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@color/WhiteColor"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal" >

                <ImageView
                    android:id="@+id/imgvProdInfoBigImg"
                    android:layout_width="430dp"
                    android:layout_height="450dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtvClientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/bigImageWithName"
                android:layout_below="@+id/bigImageWithName"
                android:maxLength="15"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtvClientName"
                android:layout_alignBottom="@+id/txtvClientName"
                android:layout_alignRight="@+id/txtProductDesc"
                android:gravity="center_horizontal"
                android:maxLength="8"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtProductDesc"
                android:layout_width="481dp"
                android:layout_height="90dp"
                android:layout_above="@+id/imgvBtnFinancial"
                android:layout_alignLeft="@+id/txtvClientName"
                android:scrollbars="vertical"
                android:maxLines = "3"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
                android:id="@+id/imgvBtnFinancial"
                android:layout_width="187dp"
                android:layout_height="69dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="87dp"
                android:background="@drawable/btn_financial_button"
                android:gravity="center_vertical|center_horizontal"
                android:scaleType="fitXY"
                android:textColor="@color/WhiteColor"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="invisible" />

        </RelativeLayout>


        <TextView
            android:id="@+id/txtvProdNotAvail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="There are no products available."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnSeeItLive"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/relativeLayout1"
            android:layout_marginRight="60dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/see_it_live"
            android:gravity="right|top"
            android:text="@string/see_it_live_multi_line"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:typeface="serif"
            android:visibility="invisible" />

        <include
            android:id="@+id/include_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/relativeLayout1"
            layout="@layout/instruction_layout" />

    </RelativeLayout>
	
</ScrollView>