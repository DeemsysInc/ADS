<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:padding="20dip"
		    android:textAlignment="viewStart"
            android:id="@+id/contact_form"            
		    android:background="@xml/rounded_edittext">

	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"	     
	        >
	 <EditText
		            android:id="@+id/etxtPhone"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
		            android:layout_alignParentTop="true"
		            android:background="@xml/rounded_edittext"
		            android:ems="10"
		            android:inputType="phone"
		            android:hint="Phone"
		            android:padding="20dp" >
	
		            <requestFocus />
		        </EditText>
	
		        <EditText
		            android:id="@+id/etxtEmail"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
		            android:layout_below="@+id/etxtPhone"	
		            android:layout_marginTop="20dp"	          
		            android:background="@xml/rounded_edittext"
		            android:ems="10"
		            android:inputType="textEmailAddress"
		            android:hint="Email Address" 
		            android:padding="20dp"/>

	        <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
	            android:id="@+id/btnCancel"
	            android:layout_width="200dp"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/etxtEmail"
	            android:layout_marginLeft="20dp"
	            android:layout_marginTop="25dp"
	            android:background="@xml/rounded_button"
	            android:padding="20dp"
	            android:text="Cancel"
	            android:textSize="20sp" />

	        <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
	            android:id="@+id/btnUpdate"
	            android:layout_width="200dp"
	            android:layout_height="wrap_content"
	            android:layout_alignBaseline="@+id/btnCancel"
	            android:layout_alignBottom="@+id/btnCancel"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="20dp"
	            android:background="@xml/rounded_button"
	            android:padding="20dp"
	            android:text="Update"
	            android:textSize="20sp" />

	    </RelativeLayout>
    
</RelativeLayout>