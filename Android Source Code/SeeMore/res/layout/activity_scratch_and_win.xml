<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <include
        android:id="@+id/include1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        layout="@layout/layout_header" />

    <include
        android:id="@+id/include2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        layout="@layout/layout_footer_menu" />

   
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="820dp"
    android:background="#FFFFFF" 
    android:layout_below="@+id/include1"
    android:visibility="visible"
    android:id="@+id/relativeLay">
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" 
    android:id="@+id/relativeSingleLay"
    android:visibility="visible">
    
    
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@xml/custom_border"
        android:indeterminateDrawable="@xml/my_progress_indeterminate"
        android:visibility="visible" />



    <RelativeLayout
        android:id="@+id/offerLayout"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/offerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:visibility="invisible" />
    </RelativeLayout>
    </RelativeLayout>
    
    
    
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" 
    android:id="@+id/relativeMultiLay"
    android:visibility="invisible">
    

    <RelativeLayout
        android:id="@+id/offerLayout1"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" >

        <ImageView
            android:id="@+id/offerImage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:visibility="invisible" />
    </RelativeLayout>
   
    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@xml/custom_border"
        android:indeterminateDrawable="@xml/my_progress_indeterminate"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtvMess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/offerLayout1"
        android:layout_centerHorizontal="true"
        android:text="Congratulations!!!!"
        android:textColor="#000000"
        android:textSize="30dp"
        android:visibility="invisible" />



    <com.seemoreinteractive.seemoreinteractive.helper.BounceListView
        android:id="@+id/listViewScratch"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/progressBar1"
        android:scrollbars="vertical" >
    </com.seemoreinteractive.seemoreinteractive.helper.BounceListView>

    <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
        android:id="@+id/btnGameRules"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/btnOffer"
        android:layout_alignBottom="@+id/btnOffer"
        android:layout_toRightOf="@+id/btnOffer"
        android:background="@drawable/button_rules"
        android:layout_marginLeft="20dp"
        android:visibility="invisible" />

    <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
        android:id="@+id/btnOffer"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/offerLayout1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:background="@drawable/button_saveprize" 
        android:visibility="invisible" />

    </RelativeLayout>
</RelativeLayout>   

</RelativeLayout>