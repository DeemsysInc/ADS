<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

   <SurfaceView
        android:id="@+id/surfaceviewForCameraView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/> 

    <include
        android:id="@+id/include1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        layout="@layout/layout_header" />
    
   

   
    <include
        android:id="@+id/include2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        layout="@layout/layout_footer_menu" />

    <RelativeLayout
        android:id="@+id/rlForVideos"
        android:layout_width="500dp"
        android:layout_height="356dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#000000"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/imgvStop"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imgvPlayPause"
            android:layout_marginRight="71dp"
            android:src="@drawable/stop_player_button" />

        <ImageView
            android:id="@+id/imgvPlayPause"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="71dp"
            android:src="@drawable/pause_player_button" />

        <VideoView
            android:id="@+id/playersurface"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_above="@+id/imgvStop"
            android:layout_alignParentRight="true"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>