<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:padding="20dip"
		    android:textAlignment="viewStart"
            android:id="@+id/address_form"            
		    android:background="@xml/rounded_edittext">

	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"	     
	        >
	 <EditText
		            android:id="@+id/etxtAddress1"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
		            android:layout_alignParentTop="true"
		            android:background="@xml/rounded_edittext"
		            android:ems="10"
		            android:inputType="textPostalAddress"
		            android:hint="Address 1"
		            android:padding="20dp" >
	
		            <requestFocus />
		        </EditText>
	
		        <EditText
		            android:id="@+id/etxtAddress2"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
		            android:layout_below="@+id/etxtAddress1"	
		            android:layout_marginTop="20dp"	          
		            android:background="@xml/rounded_edittext"
		            android:ems="10"
		            android:inputType="textPostalAddress"
		            android:hint="Address 2"
		            android:padding="20dp" />
		        
		        
		        
	        <EditText
	            android:id="@+id/etxtCity"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/etxtAddress2"
	            android:layout_marginTop="20dp"
	            android:background="@xml/rounded_edittext"
	            android:layout_centerHorizontal="true"
	            android:ems="10"
	            android:inputType="textPersonName" 
	            android:hint="City"
	            android:padding="20dp" />
		        
	        
	        
	         <Spinner
	            android:id="@+id/etxtState"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="20dp"
	            android:background="@xml/rounded_edittext"
	            android:layout_centerHorizontal="true"	            
	            android:layout_below="@+id/etxtCity"
	            android:ems="10"
	            android:padding="20dp"
	            />

	        

	        <EditText
	            android:id="@+id/etxtCountry"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/etxtState"
	            android:layout_marginTop="20dp"
	            android:background="@xml/rounded_edittext"
	            android:layout_centerHorizontal="true"
	            android:ems="10"
	            android:inputType="text" 
	            android:hint="Country"
	            android:padding="20dp" />
	        
	        
	         <EditText
	            android:id="@+id/etxtZip"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/etxtCountry"
	            android:layout_marginTop="20dp"
	            android:background="@xml/rounded_edittext"
	            android:layout_centerHorizontal="true"
	            android:ems="10"
	            android:inputType="text" 
	            android:hint="Zip"
	            android:padding="20dp" />

	        <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
	            android:id="@+id/btnCancel"
	            android:layout_width="200dp"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/etxtZip"
	            android:layout_marginLeft="20dp"
	            android:layout_marginTop="25dp"
	            android:background="@xml/rounded_button"
	            android:padding="20dp"
	            android:text="Cancel"
	            android:textSize="20sp" />

	        <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
	            android:id="@+id/btnUpdate"
	            android:layout_width="200dp"
	            android:layout_height="wrap_content"
	            android:layout_alignBaseline="@+id/btnCancel"
	            android:layout_alignBottom="@+id/btnCancel"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="20dp"
	            android:background="@xml/rounded_button"
	            android:padding="20dp"
	            android:text="Update"
	            android:textSize="20sp" />

	    </RelativeLayout>
    
</RelativeLayout>