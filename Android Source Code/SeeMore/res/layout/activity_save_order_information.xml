<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seemoreinteractive.seemoreinteractive.SaveOrderInformation"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:id="@+id/bgRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7a7872"
        android:orientation="vertical"
        android:scrollbars="vertical" >

        <include
            android:id="@+id/include1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            layout="@layout/layout_header_shop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/include2"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/include1"
            android:background="@color/WhiteColor" >

            <ListView
                android:id="@+id/listViewForSaveOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" >
            </ListView>

        </RelativeLayout>

        <include
            android:id="@+id/include2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            layout="@layout/layout_footer_menu" />
    </RelativeLayout>

</FrameLayout>