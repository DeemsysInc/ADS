<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewFlipperProd"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_gravity="right" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:id="@+id/bgRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- <SurfaceView
                android:id="@+id/surfaceviewForCameraView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" /> -->

            <include
                android:id="@+id/include1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                layout="@layout/layout_header" />

            <LinearLayout
                android:id="@+id/bigImageLayout"
                android:layout_width="478dp"
                android:layout_height="495dp"
                android:layout_below="@+id/txtvProductName"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/WhiteColor"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgvBigImg"
                    android:layout_width="430dp"
                    android:layout_height="450dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <include
                android:id="@+id/include2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                layout="@layout/layout_footer_menu" />

            <TextView
                android:id="@+id/txtvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/bigImageLayout"
                android:layout_below="@+id/include1"
                android:maxLength="15"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvProductPrice"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtvProductName"
                android:layout_alignBottom="@+id/txtvProductName"
                android:layout_alignRight="@+id/bigImageLayout"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvShortDescription"
                android:layout_width="469dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/bigImageLayout"
                android:layout_below="@+id/bigImageLayout"
                android:gravity="center"
                android:maxLength="50"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgvTapForDetails"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_alignBottom="@+id/bigImageLayout"
                android:layout_alignRight="@+id/bigImageLayout"
                android:src="@drawable/tapfordetails_2x"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/rlvLeft1"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_below="@+id/txtvShortDescription"
                android:layout_marginTop="10dp"
                android:background="@color/WhiteColor"
                android:gravity="center_vertical|center_horizontal" >

                <RelativeLayout
                    android:id="@+id/llInRlvLeft1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top" >

                    <ImageView
                        android:id="@+id/imgvLeftFirst"
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:scaleType="fitCenter" />

                    <Button
                        android:id="@+id/btnSeeItLiveLeft1"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/see_it_live"
                        android:gravity="right|top"
                        android:paddingRight="2dp"
                        android:text="@string/see_it_live_multi_line"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rlvLeft2"
                android:layout_width="110dp"
                android:layout_height="140dp"
                android:layout_alignTop="@+id/rlvLeft1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:layout_toLeftOf="@+id/rlvMiddle"
                android:background="@color/WhiteColor"
                android:gravity="center_vertical|center_horizontal" >

                <RelativeLayout
                    android:id="@+id/llInRlvLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top" >

                    <ImageView
                        android:id="@+id/imgvLeftSecond"
                        android:layout_width="100dp"
                        android:layout_height="130dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:scaleType="fitCenter" />

                    <Button
                        android:id="@+id/btnSeeItLiveLeft2"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/see_it_live"
                        android:gravity="right|top"
                        android:paddingRight="2dp"
                        android:text="@string/see_it_live_multi_line"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rlvMiddle"
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_above="@+id/include2"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="85dp"
                android:layout_marginLeft="10dp"
                android:background="@color/WhiteColor"
                android:gravity="center_vertical|center_horizontal" >

                <RelativeLayout
                    android:id="@+id/llInRlvMiddle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top" >

                    <ImageView
                        android:id="@+id/imgvMiddle"
                        android:layout_width="140dp"
                        android:layout_height="180dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:scaleType="fitCenter" />

                    <Button
                        android:id="@+id/btnSeeItLiveMiddle"
                        android:layout_width="65dp"
                        android:layout_height="55dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/see_it_live"
                        android:gravity="right|top"
                        android:paddingRight="2dp"
                        android:text="@string/see_it_live_multi_line"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rlvRight2"
                android:layout_width="110dp"
                android:layout_height="140dp"
                android:layout_alignTop="@+id/rlvLeft2"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/rlvMiddle"
                android:background="@color/WhiteColor"
                android:gravity="center_vertical|center_horizontal" >

                <RelativeLayout
                    android:id="@+id/llInRlvRight2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top" >

                    <ImageView
                        android:id="@+id/imgvRightSecond"
                        android:layout_width="100dp"
                        android:layout_height="130dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:scaleType="fitCenter" />

                    <Button
                        android:id="@+id/btnSeeItLiveRight2"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/see_it_live"
                        android:gravity="right|top"
                        android:paddingRight="2dp"
                        android:text="@string/see_it_live_multi_line"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rlvRight1"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/rlvLeft1"
                android:background="@color/WhiteColor"
                android:gravity="center_vertical|center_horizontal" >

                <RelativeLayout
                    android:id="@+id/llInRlvRight1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top" >

                    <ImageView
                        android:id="@+id/imgvRightFirst"
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:scaleType="fitCenter" />

                    <Button
                        android:id="@+id/btnSeeItLiveRight1"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/see_it_live"
                        android:gravity="right|top"
                        android:paddingRight="2dp"
                        android:text="@string/see_it_live_multi_line"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>

            <com.seemoreinteractive.seemoreinteractive.helper.PressedBgImageView
                android:id="@+id/imgvHelp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/txtvProductPrice"
                android:src="@drawable/help_icon" />

            <Button
                android:id="@+id/btnSeeItLive"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_alignRight="@+id/bigImageLayout"
                android:layout_alignTop="@+id/bigImageLayout"
                android:background="@drawable/see_it_live"
                android:gravity="right|top"
                android:paddingRight="20dp"
                android:text="@string/see_it_live_multi_line"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:typeface="serif"
                android:visibility="invisible" />

            <include
                android:id="@+id/include_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                layout="@layout/instruction_layout" />

            <!--
                 <ImageView
	            android:id="@+id/imgvSeeItLive"
	            android:layout_width="110dp"
	            android:layout_height="60dp"
	            android:layout_alignRight="@+id/bigImageLayout"
	            android:layout_alignTop="@+id/bigImageLayout"
	            android:scaleType="fitXY"
	            android:visibility="invisible"
	            android:background="@drawable/see_it_live2" />
            -->

        </RelativeLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:id="@+id/bgRelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_closet"
            android:orientation="vertical" >

            <include
                android:id="@+id/include4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                layout="@layout/layout_header_tap" />

            <TextView
                android:id="@+id/txtHeadTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:maxLength="30"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/WhiteColor"
                android:textSize="30sp"
                android:textStyle="bold" />

            <com.seemoreinteractive.seemoreinteractive.fancycoverflow.FancyCoverFlow
                android:id="@+id/fancyCoverFlow1"
                android:layout_width="match_parent"
                android:layout_height="404dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/include4"
                android:layout_marginTop="10dp"
                android:spacing="-120dip" />

            <TextView
                android:id="@+id/txtPdPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/fancyCoverFlow1"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txtPdDesc"
                android:layout_width="524dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/txtPdPrice"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </RelativeLayout>
    </ScrollView>

</ViewFlipper>