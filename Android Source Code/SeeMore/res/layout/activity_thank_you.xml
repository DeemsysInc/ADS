<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bgRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7a7872"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <include
        android:id="@+id/include1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        layout="@layout/layout_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/include2"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/include1"
        android:background="@color/WhiteColor" >

        <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
            android:id="@+id/btnShopAgain"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_alignBaseline="@+id/btnMyOrders"
            android:layout_alignBottom="@+id/btnMyOrders"
            android:layout_marginLeft="83dp"
            android:layout_toRightOf="@+id/btnMyOrders"
            android:background="@drawable/offer_redeem_button"
            android:scaleType="fitXY"
            android:text="Shop Again!"
            android:textColor="@color/WhiteColor"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
            android:id="@+id/btnMyOrders"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_alignLeft="@+id/txtvThankYouMsg"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="143dp"
            android:background="@drawable/offer_redeem_button"
            android:scaleType="fitXY"
            android:text="My Saved Orders!"
            android:textColor="@color/WhiteColor"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/txtvThankYouMsg"
            android:layout_width="550dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnShopAgain"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="218dp"
            android:text="Thank you for saving your order.\n\n Please initiate your order from Settings -> My Orders."
            android:textColor="@color/BlackColor"
            android:textSize="28sp"
            android:typeface="sans"             
            android:textStyle="bold"
           />

    </RelativeLayout>

    <include
        android:id="@+id/include2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        layout="@layout/layout_footer_menu" />

</RelativeLayout>