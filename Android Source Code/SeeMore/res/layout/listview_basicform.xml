<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="20dip"		    
		    android:background="@xml/rounded_edittext"
		    android:textAlignment="viewStart"
            android:id="@+id/basic_form">

	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"	    
	        
	        >
	 <EditText
		            android:id="@+id/etxtFirstName"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
		            android:layout_alignParentTop="true"
		            android:background="@xml/rounded_edittext"
		            android:ems="10"
		            android:inputType="textPersonName"
		            android:hint="First Name" 
		            android:padding="20dp"
		            >
	
		            <requestFocus />
		        </EditText>
	
		        <EditText
		            android:id="@+id/etxtLastName"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
		            android:layout_below="@+id/etxtFirstName"	
		            android:layout_marginTop="20dp"	          
		            android:background="@xml/rounded_edittext"
		            android:ems="10"
		            android:inputType="textPersonName"
		            android:hint="Last Name" 
	            	android:padding="20dp"/>
		        
		        
		        
	        <EditText
	            android:id="@+id/etxtGender"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/etxtLastName"
	            android:layout_marginTop="20dp"
	            android:background="@xml/rounded_edittext"
	            android:layout_centerHorizontal="true"
	            android:ems="10"
	            android:inputType="textPersonName" 
	            android:hint="Gender" 
	            android:padding="20dp"/>
		        

	        <EditText
	            android:id="@+id/etxtDOB"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/etxtGender"
	            android:layout_marginTop="20dp"
	            android:background="@xml/rounded_edittext"
	            android:layout_centerHorizontal="true"
	            android:ems="10"
	            android:inputType="date" 
	            android:hint="Date of Birth"
	            android:padding="20dp" />

	        <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
	            android:id="@+id/btnCancel"
	            android:layout_width="200dp"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/etxtDOB"
	            android:layout_below="@+id/etxtDOB"
	            android:background="@xml/rounded_button"
	            android:text="Cancel" 
	            android:textSize="20sp"
	            android:layout_marginTop="20dp"	            
	            android:layout_marginLeft="25dp"	            
	            android:padding="20dp"/>

	        <com.seemoreinteractive.seemoreinteractive.helper.PressedBgButton
	            android:id="@+id/btnUpdate"
	            android:layout_width="200dp"
	            android:layout_height="wrap_content"
	            android:layout_alignBaseline="@+id/btnCancel"
	            android:layout_alignBottom="@+id/btnCancel"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="20dp"
	            android:background="@xml/rounded_button"
	            android:padding="20dp"
	            android:text="Update"
	            android:textSize="20sp" />

	    </RelativeLayout>
    
</RelativeLayout>