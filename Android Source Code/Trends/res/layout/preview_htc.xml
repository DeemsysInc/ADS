<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/nothing" >
    </ImageView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >
            
			<TextView
			    	android:id="@+id/preview_save"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:background="@drawable/big_blue_button"
                    android:gravity="center"
                    android:text="Save Image"
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp"
                    android:textColor="#ffffff"
                    android:textSize="17dp" />
			
			<TextView
			    	android:id="@+id/preview_fb"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:background="@drawable/big_blue_button"
                    android:gravity="center"
                    android:text="Facebook"
                    android:layout_marginBottom="3dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="17dp" />
			
			<TextView
			    	android:id="@+id/preview_twitter"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:background="@drawable/big_blue_button"
                    android:gravity="center"
                    android:text="Twitter"
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp"
                    android:textColor="#ffffff"
                    android:textSize="17dp" />
			
			<TextView
			    	android:id="@+id/preview_email"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:background="@drawable/big_blue_button"
                    android:gravity="center"
                    android:text="Email"
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp"
                    android:textColor="#ffffff"
                    android:textSize="17dp" />
			
			<TextView
			    	android:id="@+id/preview_share"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:background="@drawable/big_blue_button"
                    android:gravity="center"
                    android:text="Share"
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp"
                    android:textColor="#ffffff"
                    android:textSize="17dp" />
			
			<TextView
			    	android:id="@+id/preview_mms"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:background="@drawable/big_blue_button"
                    android:gravity="center"
                    android:text="MMS"
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp"
                    android:textColor="#ffffff"
                    android:textSize="17dp" />
			
			<TextView
			    	android:id="@+id/preview_cancel"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:background="@drawable/big_black_button"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp"
                    android:textColor="#ffffff"
                    android:textSize="17dp" />
            
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>