<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/character_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="matrix" >
    </ImageView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/main_camera"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/camera"
        android:visibility="invisible" />

    <com.seemoreinteractive.virtualshot.VerticalSeekBar
        android:id="@+id/main_slider"
        android:layout_width="37dp"
        android:max="80"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:progressDrawable="@drawable/slider"
        android:layout_marginTop="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="2dp"
        android:thumb="@drawable/thumb"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/main_help"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/main_instruction"
        android:layout_width="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:text="Center the Trends AR product image on your screen." />

    <TextView
        android:id="@+id/txtTryNow"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/main_instruction"
        android:layout_alignTop="@+id/main_help"
        android:background="@drawable/big_blue_button"
        android:gravity="center"
        android:text="Try Now"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:textStyle="bold" />
    
</RelativeLayout>